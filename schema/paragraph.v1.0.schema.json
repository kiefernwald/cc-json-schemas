{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Definition for a paragraph in ContentCentral",
  "type": "object",
  "allOf": [
    {
      "$ref": "./contentelement.v1.0.schema.json#"
    },
    {
      "properties": {
        "text": {
          "description": "Text content of paragraph",
          "type": "string"
        },
        "format": {
          "description": "Format this paragraph is written in. Used by renderers.",
          "type": "string",
          "enum": [
            "plain",
            "html",
            "markdown"
          ]
        }
      }
    }
  ]
}
